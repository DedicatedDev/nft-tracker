{
  "name": "@evm/monorepo",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": "true",
  "workspaces": {
    "packages": [
      "packages/base",
      "packages/app/aggregator",
      "packages/app/mock-oracle",
      "packages/external",
      "packages/postchain"
    ]
  },
  "packageManager": "yarn@3.1.0",
  "engines": {
    "node": ">=16"
  },
  "installConfig": {
    "hoistingLimits": "workspaces"
  },
  "scripts": {
    "lint": "eslintg .",
    "lint-fix": "eslint --fix .",
    "postinstall": "patch-package && yarn base:build",
    "base:build": "cd packages/base && yarn build",
    "chromia:node": "ts-node packages/postchain/scripts/run-node.ts",
    "test:rell": "ts-node packages/postchain/scripts/test-rell.ts",
    "save:mock-contracts": "ts-node packages/app/mock-oracle/src/modules/mock-oracle/save-mock-contracts.ts",
    "start:eventsFilter": "ts-node packages/app/mock-oracle/src/modules/mock-oracle/crons/index.ts",
    "start:blockAggregator": "ts-node packages/app/mock-oracle/src/modules/mock-oracle/listeners/index.ts",
    "start:oracle": "yarn save:mock-contracts && concurrently \"yarn start:eventsFilter\" \"yarn start:blockAggregator\""
  },
  "dependencies": {
    "ft3-lib": "^3.4.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.5.4",
    "lodash": "^4.17.21",
    "node-cron": "^3.0.1",
    "concurrently": "^7.2.1"
  },
  "devDependencies": {
    "@typechain/ethers-v5": "^10.0.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.25",
    "chai": "^4.3.6",
    "dotenv": "^16.0.0",
    "eslint": "^8.15.0",
    "@supercharge/promise-pool": "^2.1.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^14.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-formatjs": "^2.17.9",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-unused-imports": "^1.1.5",
    "ethers": "^5.6.2",
    "fs-extra": "^10.1.0",
    "husky": "^3.0.5",
    "mocha": "^9.2.2",
    "patch-package": "^6.4.7",
    "prop-types": "^15.7.2",
    "tree-kill": "^1.2.2",
    "ts-node": "^10.7.0",
    "typechain": "^8.0.0",
    "typescript": "^4.5.4"
  }
}
